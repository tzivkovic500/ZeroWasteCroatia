<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        style="@style/layout_style1"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/layout_style3"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                style="@style/layout_style3"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="FOLLOW US!"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Let's build sustainable environment for Nature and for Us"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            style="@style/layout_style3"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/call_button"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/baseline_call_black_48" />

            <ImageButton
                android:id="@+id/emailButton"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:gravity="center_horizontal"
                android:paddingRight="20dp"
                android:src="@drawable/baseline_email_black_48" />

            <ImageButton
                android:id="@+id/facebook"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:gravity="center_horizontal"
                android:paddingRight="20dp"
                android:src="@drawable/icons8_facebook_50" />

            <ImageButton
                android:id="@+id/instagram"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:gravity="center_horizontal"
                android:paddingRight="20dp"
                android:src="@drawable/icons8_instagram_filled_50" />

        </LinearLayout>

        <LinearLayout
            style="@style/layout_style3"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/sendButton"
                style="@style/layout_style3"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:text="@string/add_new_place"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>