<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#379237</item>
    </style>
    <!-- Style for Layout-->
    <style name="layout_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
       <style name="layout_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="layout_style3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Style for  Collapsed/Expanded Layout-->
    <style name="place_info_layout_style">
        <item name="android:layout_width">@dimen/nullSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- TextView style in Collapsed/Expanded Layout -->
    <style name="place_info_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:layout_marginTop">@dimen/food_text_margin_top</item>
    </style>
    <!-- ImageView style in Collapsed/Expanded Layout-->
    <style name="icon_image_style">
        <item name="android:layout_width">@dimen/icon_image_size</item>
        <item name="android:layout_height">@dimen/icon_image_size</item>
        <item name="android:tint">@color/titleColor</item>
    </style>

</resources>
